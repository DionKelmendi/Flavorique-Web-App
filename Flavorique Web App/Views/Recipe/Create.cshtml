@model Recipe

@{
    var tokenUrl = "https://localhost:7147/token";
    ViewData["Title"] = "Create";
}
<form onsubmit="setValues()" method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Recipe </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 d-none">
            <label asp-for="Body"></label>
            <input asp-for="Body" class="form-control body-input" />
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <div id="editor"></div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" style="width: 200px"> Create </button>
            <a asp-controller="Recipe" asp-action="Index" class="btn btn-secondary" style="width: 200px">Go back</a>
        </div>
    </div>
</form>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.ckbox.io/ckbox/2.2.0/ckbox.js"></script>
    <script src="~/assets/vendor/build/ckeditor.js"></script>
    <script>
            
            let editor;

                ClassicEditor
                    .create(document.querySelector('#editor'), {
                        ckbox: {
                            tokenUrl: '@tokenUrl',
                            theme: 'lark'
                        },
                        removePlugins: ['FormatPainter', 'Table'],
                        })
                    .then(newEditor => {
                        editor = newEditor;
                    })
                    .catch(error => {
                        console.log(error);
                    });

                function setValues() {
                    let ckContent = document.querySelector(".ck-content");
                    let body = ckContent.innerHTML;
                    body.replace("image widget. Press Enter to type after or press Shift + Enter to type before the widget", "");

                    let bodyInput = document.querySelector(".body-input");
                    bodyInput.value = body;
                }
    </script>
    }
}